<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <!-- Here is the corner radius -->
    <corners
        android:radius="14dp" />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#4c98cc"
        android:startColor="#0ca0e4"
        android:endColor="#1227e7"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <!-- view border color and width -->
    <stroke
        android:width="3dp"
        android:color="#878787"
        />


</shape> 